{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
  },
  "globals": {
    "__base": true,
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "classes": true,
    "modules": true,
  },
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "consistent-return": [0],
    "no-else-return": [0],
    "yoda": [2, "never", {"exceptRange": true}],
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": [2, {"args": "none"}],
    "camelcase": [0],
    "no-underscore-dangle": [0],
    "quotes": [2, "backtick"],
  },
}
